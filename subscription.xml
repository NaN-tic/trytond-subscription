<tryton>
    <data>

        <record model="res.group" id="group_subscription_admin">
            <field name="name">Subscription Administration</field>
        </record>
        <record model="res.user-res.group" id="user_admin_group_subscription_admin">
            <field name="user" ref="res.user_admin"/>
            <field name="group" ref="group_subscription_admin"/>
        </record>
        <record model="res.user-res.group" id="user_trigger_group_subscription_admin">
            <field name="user" ref="res.user_trigger"/>
            <field name="group" ref="group_subscription_admin"/>
        </record>

        <menuitem name="Subscription" id="menu_main_subscription"
                parent="ir.menu_administration"/>

    <!-- subscription.document -->
        <record model="ir.ui.view" id="subscription_document_view_tree">
            <field name="model">subscription.document</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Subscription Documents">
                        <field name="name"/>
                        <field name="active"/>
                        <field name="model"/>
                    </tree>
                    ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="subscription_document_view_form">
            <field name="model">subscription.document</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Subscription Document" col="6">
                        <label name="name"/>
                        <field name="name" xexpand="1"/>
                        <label name="model"/>
                        <field name="model" xexpand="1"/>
                        <label name="active"/>
                        <field name="active" xexpand="0" width="50"/>
                        <field name="fields" colspan="6"/>
                    </form>
                    ]]>
            </field>
        </record>

        <record model="ir.action.act_window" id="act_subscription_document">
            <field name="name">Documents</field>
            <field name="res_model">subscription.document</field>
        </record>

        <record model="ir.action.act_window.view" id="act_subscription_document_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="subscription_document_view_tree"/>
            <field name="act_window" ref="act_subscription_document"/>
        </record>

        <record model="ir.action.act_window.view" id="act_subscription_document_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="subscription_document_view_form"/>
            <field name="act_window" ref="act_subscription_document"/>
        </record>

        <menuitem name="Documents"
            parent="menu_main_subscription"
            sequence="1" id="menu_subscription_document"
            action="act_subscription_document"/>

        <record model="ir.model.access" id="access_subscription_document">
            <field name="model" search="[('model', '=', 'subscription.document')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>

        <record model="ir.model.access" id="access_subscription_document_admin">
            <field name="model" search="[('model', '=', 'subscription.document')]"/>
            <field name="group" ref="group_subscription_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>


    <!-- subscription.document.field -->
        <record model="ir.ui.view" id="subscription_document_field_view_tree">
            <field name="model">subscription.document.field</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Document Fields">
                        <field name="field"/>
                        <field name="value"/>
                        <field name="document"/>
                    </tree>
                    ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="subscription_document_field_view_form">
            <field name="model">subscription.document.field</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Document Field" col="6">
                        <label name="field"/>
                        <field name="field"/>
                        <label name="value"/>
                        <field name="value"/>
                        <label name="document"/>
                        <field name="document"/>
                    </form>
                    ]]>
            </field>
        </record>

        <record model="ir.action.act_window" id="act_subscription_document_field">
            <field name="name">Document Fields</field>
            <field name="res_model">subscription.document.field</field>
        </record>

        <record model="ir.action.act_window.view" id="act_subscription_document_field_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="subscription_document_field_view_tree"/>
            <field name="act_window" ref="act_subscription_document_field"/>
        </record>

        <record model="ir.action.act_window.view" id="act_subscription_document_field_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="subscription_document_field_view_form"/>
            <field name="act_window" ref="act_subscription_document_field"/>
        </record>

        <menuitem name="Document Fields"
            parent="menu_main_subscription"
            sequence="1" id="menu_subscription_document_field"
            action="act_subscription_document_field"/>

        <record model="ir.model.access" id="access_subscription_document_field">
            <field name="model" search="[('model', '=', 'subscription.document.field')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>

        <record model="ir.model.access" id="access_subscription_document_field_admin">
            <field name="model" search="[('model', '=', 'subscription.document.field')]"/>
            <field name="group" ref="group_subscription_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>


    <!-- subscription.subscription -->
        <record model="ir.ui.view" id="subscription_subscription_view_tree">
            <field name="model">subscription.subscription</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Subscriptions">
                        <field name="name"/>
                        <field name="user"/>
                        <field name="request_user"/>
                        <field name="interval"/>
                        <field name="interval_type"/>
                        <field name="exec_init"/>
                        <field name="date_init"/>
                        <field name="state"/>
                        <field name="cron"/>
                        <field name="active"/>
                    </tree>
                    ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="subscription_subscription_view_form">
            <field name="model">subscription.subscription</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Subscription" col="6">
                        <label name="name"/>
                        <field name="name" xexpand="1"/>
                        <label name="party"/>
                        <field name="party" xexpand="1"/>
                        <newline/>
                        <label name="user"/>
                        <field name="user" xexpand="1"/>
                        <label name="request_user"/>
                        <field name="request_user" xexpand="1"/>
                        <label name="active"/>
                        <field name="active" xexpand="0"/>
                        <notebook colspan="6">
                            <page string="Subsription Data"
                                    id="subsription_data" col="6">
                                <label name="interval_type"/>
                                <field name="interval_type" colspan="5"/>
                                <label name="interval"/>
                                <field name="interval"/>
                                <label name="exec_init"/>
                                <field name="exec_init"/>
                                <label name="date_init"/>
                                <field name="date_init"/>
                                <label name="doc_source"/>
                                <field name="doc_source" colspan="5"/>
                                <separator string="Notes" id="notes_separator"
                                        colspan="3"/>
                                <field name="notes" colspan="6"/>
                                <label name="cron"/>
                                <field name="cron" colspan="5"/>
                                <label name="state"/>
                                <field name="state"/>
                                <group col="3" colspan="4"
                                        id="subscriptions_buttons">
                                    <button name="set_process"
                                        string="Process"
                                        icon="tryton-go-next"/>
                                    <button name="set_done"
                                        string="Stop"
                                        icon="tryton-cancel"/>
                                    <button name="set_draft"
                                        string="Set to Draft"
                                        icon="tryton-ok"/>
                                </group>
                            </page>
                            <page string="Documents Created"
                                    id="documents_created">
                                <field name="doc_lines" colspan="4"/>
                            </page>
                            <page string="Notes" id="notes">
                                <field name="note" colspan="4"/>
                            </page>
                        </notebook>
                    </form>
                    ]]>
            </field>
        </record>

        <record model="ir.action.act_window" id="act_subscription_subscription">
            <field name="name">Subscriptions</field>
            <field name="res_model">subscription.subscription</field>
        </record>

        <record model="ir.action.act_window.view" id="act_subscription_subscription_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="subscription_subscription_view_tree"/>
            <field name="act_window" ref="act_subscription_subscription"/>
        </record>

        <record model="ir.action.act_window.view" id="act_subscription_subscription_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="subscription_subscription_view_form"/>
            <field name="act_window" ref="act_subscription_subscription"/>
        </record>

        <menuitem name="Subscriptions"
            parent="menu_main_subscription"
            sequence="1" id="menu_subscription_subscription"
            action="act_subscription_subscription"/>

        <record model="ir.model.access" id="access_subscription">
            <field name="model" search="[('model', '=', 'subscription.subscription')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>

        <record model="ir.model.access" id="access_subscription_admin">
            <field name="model" search="[('model', '=', 'subscription.subscription')]"/>
            <field name="group" ref="group_subscription_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>


    <!-- subscription.subscription.history -->
        <record model="ir.ui.view" id="subscription_subscription_history_view_tree">
            <field name="model">subscription.subscription.history</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Subscription Histories">
                        <field name="date"/>
                        <field name="document"/>
                        <field name="subscription"/>
                    </tree>
                    ]]>
            </field>
        </record>

        <record model="ir.ui.view" id="subscription_subscription_history_view_form">
            <field name="model">subscription.subscription.history</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Subscription History" col="6">
                        <label name="date"/>
                        <field name="date"/>
                        <label name="document"/>
                        <field name="document"/>
                        <label name="subscription"/>
                        <field name="subscription"/>
                    </form>
                    ]]>
            </field>
        </record>

        <record model="ir.action.act_window" id="act_subscription_subscription_history">
            <field name="name">History</field>
            <field name="res_model">subscription.subscription.history</field>
        </record>

        <record model="ir.action.act_window.view" id="act_subscription_subscription_history_tree_view">
            <field name="sequence" eval="10"/>
            <field name="view" ref="subscription_subscription_history_view_tree"/>
            <field name="act_window" ref="act_subscription_subscription_history"/>
        </record>

        <record model="ir.action.act_window.view" id="act_subscription_subscription_history_form_view">
            <field name="sequence" eval="20"/>
            <field name="view" ref="subscription_subscription_history_view_form"/>
            <field name="act_window" ref="act_subscription_subscription_history"/>
        </record>

        <menuitem name="Histories"
            parent="menu_main_subscription"
            sequence="1" id="menu_subscription_subscription_history"
            action="act_subscription_subscription_history"/>

        <record model="ir.model.access" id="access_subscription_document_history">
            <field name="model" search="[('model', '=', 'subscription.subscription.history')]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>

        <record model="ir.model.access" id="access_subscription_document_history_admin">
            <field name="model" search="[('model', '=', 'subscription.subscription.history')]"/>
            <field name="group" ref="group_subscription_admin"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_delete" eval="True"/>
        </record>

    </data>
</tryton>
